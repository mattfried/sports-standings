{{!< default}}

<div id="btnContainer">
  <button class="btn" id="nhlBtn" onclick="showStandings(this)">NHL Standings</button>
  <button class="btn" id="nbaBtn" onclick="showStandings(this)">NBA Standings</button>
  <button class="btn" id="nflBtn" onclick="showStandings(this)">NFL Standings</button>
  <button class="btn" id="mlbBtn" onclick="showStandings(this)">MLB Standings</button>
</div>

 <div id="select" class="animated infinite pulse">LOADING...</div>

 <div id="standings"></div>


 <!-- Modal -->
<div id="emailModal" class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLongTitle">Email Sign Up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="close-modal">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Want to be notified when each new season starts? Please enter your email below!</p>
        <form>
          <input action="/signup" type="email" class="form-group form-control" placeholder="Your Email">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="submitModalBtn" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>
