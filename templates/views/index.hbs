{{!< default}}

<div id="btnContainer">
  <button class="btn" id="nhlBtn" onclick="showStandings(this)">NHL Standings</button>
  <button class="btn" id="nbaBtn" onclick="showStandings(this)">NBA Standings</button>
  <button class="btn" id="nflBtn" onclick="showStandings(this)">NFL Standings</button>
  <button class="btn" id="mlbBtn" onclick="showStandings(this)">MLB Standings</button>
</div>

 <div id="select" class="animated infinite pulse">LOADING...</div>

 <div id="standings"></div>


 <!-- Signup Form -->
 <form method="post">
   <div class="form-group">
     {{#if emailSubmitted}}
     <h5>Thank You! We will notify you when the next season starts :)</h5>
     {{else}}
     <label for="exampleInputEmail1">Sign Up for Start of Season Notifications</label>
     <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email" value="{{formData.email}}">
     <small id="emailHelp" class="form-text text-muted">Don't worry, we don't spam.</small>
     {{/if}}
   </div>
   <button type="submit" id="submitModalBtn" class="btn btn-primary">Submit</button>
 </form>
