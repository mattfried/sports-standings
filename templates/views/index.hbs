{{!< default}}

<div id="btnContainer">
  <button class="btn" id="nhlBtn" onclick="showStandings(this)">NHL Standings</button>
  <button class="btn" id="nbaBtn" onclick="showStandings(this)">NBA Standings</button>
  <button class="btn" id="nflBtn" onclick="showStandings(this)">NFL Standings</button>
  <button class="btn" id="mlbBtn" onclick="showStandings(this)">MLB Standings</button>
</div>

 <div id="select" class="animated infinite pulse">LOADING...</div>

 <div id="standings"></div>


 <!-- Modal -->
<div id="emailModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLongTitle">Email Sign Up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="close-modal">&times;</span>
        </button>
      </div>

      <form method="post">
        <div class="modal-body">
          {{#if emailSubmitted}}
            <h4>Thank You! Your email has been submitted</h4>
          {{else}}
            <p>Want to be notified when each new season starts? Please enter your email below!</p>
            <input type="email" name="email" class="form-group form-control {{#if validationErrors.email}}has-error{{/if}}" placeholder="Your Email" value="{{formData.email}}">
          {{/if}}
        </div>

        {{#if emailSubmitted}}
        {{else}}
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" id="submitModalBtn" class="btn btn-primary">Submit</button>
        </div>
      </form>
      {{/if}}

    </div>
  </div>
</div>
